<container xmlns="http://symfony.com/schema/dic/services">
    <services>
        <service class="Brille24\SyliusCustomerOptionsPlugin\Handler\CsvImportErrorHandler"
                 id="brille24.sylius_customer_options_plugin.handler.csv_import_error_handler"
        >
            <argument type="service" id="sylius.email_sender" />
            <argument type="service" id="security.token_storage" />
            <argument>brille24_failed_price_import_csv</argument>
        </service>

        <service class="Brille24\SyliusCustomerOptionsPlugin\Handler\GenericImportErrorHandler"
                 id="brille24.sylius_customer_options_plugin.handler.product_list_import_error_handler"
        >
            <argument type="service" id="sylius.email_sender" />
            <argument type="service" id="security.token_storage" />
            <argument>brille24_failed_price_import_product_list</argument>
        </service>

        <service id="Brille24\SyliusCustomerOptionsPlugin\CommandHandler\AddItemToCartWithCustomerOptionsHandler"
                 decorates="Sylius\Bundle\ApiBundle\CommandHandler\Cart\AddItemToCartHandler"
                 decoration-priority="10"
        >
            <argument type="service"
                      id="Brille24\SyliusCustomerOptionsPlugin\CommandHandler\AddItemToCartWithCustomerOptionsHandler.inner"/>
            <argument type="service" id="brille24.customer_options_plugin.factory.order_item_option_factory"/>
            <argument type="service" id="sylius.order_processing.order_processor"/>
            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
